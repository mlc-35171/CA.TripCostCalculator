def hotel_cost(n):
  nights =  140 * n
  return nights

def plane_ride_cost(city):
  if city == "Charlotte":
    return 183
  if city == "Tampa":
    return 220
  if city == "Pittsburgh":
    return 222
  if city == "Los Angeles":
    return 475
  
def rental_car_cost(d):
  days = 40 * d
  if d >= 7:
    days -= 50
  elif d >= 3:
    days -= 20
  return days

def trip_cost(city,days):
  return (rental_car_cost(days) + hotel_cost(days)) + plane_ride_cost(city)

print trip_cost(city,days)
